<% content_for('login_form') do %>
<p class="login-box-msg">Sign in to start your session</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="col-sm-12">
        <div id="form_error_messages">
          <% if flash[:alert] -%>
              <div class="alert alert-danger" role="alert">
                <%= flash[:alert] %>
              </div>
          <% end -%>
          <% if resource.errors.any? %>
            <%= render 'authorize_it/shared/form_errors', :messages => resource.errors.full_messages %>
          <% end %>
        </div>
      </div>
    </div>
    <div class='form-group has-feedback'>
      <label for=''>Username</label>
      <%= f.text_field :username, class: 'form-control',  placeholder: 'username', 'data-error':'Invalid user name.', required: true, autofocus: true %>
      <span class="glyphicon glyphicon-user form-control-feedback"></span>
      <span class="help-block with-errors"></span>
    </div>
    <div class='form-group has-feedback'>
      <label for=''>Password</label>
      <%= f.password_field :password, class: 'form-control' , 'data-minlength': '8', placeholder: 'Password', 'data-error':'password is required.',required: true, autocomplete: "off" %>
      <span class="glyphicon glyphicon-lock form-control-feedback"></span>
      <span class="help-block with-errors"></span>
    </div>

    <% if devise_mapping.rememberable? -%>
        <div class="row">
          <div class="col-xs-8">
            <div class="checkbox icheck">
              <label>
                <%= f.check_box :remember_me %> Remember Me
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
          </div>
          <!-- /.col -->
        </div>
    <% end -%>
<% end %>

<%= render "devise/shared/links" %>
<% end %>

<div class="login-box">
  <div class="login-logo">
    <a href="/"><b>Authorize</b>IT</a>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <%= yield 'login_form' %>
  </div>
  <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
