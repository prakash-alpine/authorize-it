toastr.success('New user has been added successfully');
$('#newUser').modal('hide');
$('#table_content').html('<%= escape_javascript(render 'table', :users => @users) %>');
$('#users_table').DataTable({
    "ajax": "/authorize_it/users.json",
    "columns": [
        { "data": "first_name" },
        { "data": "last_name" },
        { "data": "username" },
        { "data": "email" },
        { "data": "department" },
        { "data": "actions" }
    ],
    "paging": true,
    "lengthChange": false,
    "searching": true,
    "ordering": true,
    "info": true,
    "autoWidth": false
});
