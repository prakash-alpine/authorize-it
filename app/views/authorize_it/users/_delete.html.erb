<!-- Modal -->
<div id="deleteUser" class="modal" tabindex="-1" role="dialog"  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-center">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class="col-md-1">
            <i class="fa fa-2x fa-exclamation-triangle"  style="color:darkorange;"></i>
          </div>
          <div class="col-md-11">
            <span>Are you sure you want to delete this user?</span>
            <p>This user will be deleted and can not be recovered.</p>
            <br/>
            <p>Are you sure you want to continue?</p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type='button' class='btn btn-info pull-left' data-dismiss='modal'>Cancel</button>
        <%= link_to authorize_it_user_path(@user), :method => :delete, :title => 'Delete User', :remote => true do %>
            <button type="" class="btn btn-primary">Submit</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
