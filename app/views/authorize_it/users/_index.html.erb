<% content_for('users_table') do %>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.department %></td>
    </tr>
    <% end %>
<% end %>

<section class="content">
  <div class="row">
    <div class="col-xs-6">
      <h3 class="pull-left">Users</h3>
    </div>
    <div class="col-xs-6">
      <%= link_to :new_authorize_it_user, :title => 'New User', :remote => true do %>
          <button type="" class="btn bg-navy margin-top pull-right">+Add User</button>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-body">
          <table id="users_table" class="table table-bordered table-striped">
            <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Username</th>
              <th>Email</th>
              <th>Department</th>
            </tr>
            </thead>
            <tbody>
                <%= yield 'users_table' %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</section>
