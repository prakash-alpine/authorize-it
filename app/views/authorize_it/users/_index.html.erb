
<section class="content">
  <div class="row">
    <div class="col-xs-6">
      <h3 class="pull-left">Users</h3>
    </div>
    <div class="col-xs-6">
      <%= link_to :new_authorize_it_user, :title => 'New User', :remote => true do %>
          <button type="" class="btn bg-navy margin-top pull-right">+Add User</button>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-body">
          <table id="users_table" class="table table-bordered table-striped">
            <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Username</th>
              <th>Email</th>
              <th>Department</th>
              <th>Actions</th>
            </tr>
            </thead>
            <tbody>
                <%= render partial: 'table_row' , collection: @users , as: :user %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
  </div>
</section>
